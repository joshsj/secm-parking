@model Car
@{
    ViewData["Title"] = "Register";
}

<h2>Secure your car</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="BayNumber">Bay Number</label>
        <input class="form-control" type="number" asp-for="BayNumber" />
        <span asp-validation-for="BayNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input class="form-control" type="password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <input type="submit" value="Register" class="btn btn-primary" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
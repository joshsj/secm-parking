@model Vehicle
@{
    ViewData["Title"] = "Forgotten Password";
}

<h2>Forgotten Password</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="BayNumber">Bay Number</label>
        <input class="form-control" asp-for="BayNumber" autofocus />
        <span asp-validation-for="BayNumber" class="text-danger"></span>
    </div>

    <input type="submit" value="Send" class="btn btn-primary" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
